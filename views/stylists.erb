<% if @all_stylists.any? %>
  <h3> Stylists: </h3>
  <ul>
    <% @all_stylists.each() do |stylist| %>
      <li><a href="/stylist/<%= stylist.id() %>"><%= stylist.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <h3>No Stylists</h3>
<% end %>

<form action="/new_stylist" method="post">
  <label for="stylist_name">New Stylist: </label>
  <input id="stylist_name" name="stylist_name" type="text">
  <button type="submit" class="btn-success">Add Stylist</button>
</form>
